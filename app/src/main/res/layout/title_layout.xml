<?xml version="1.0" encoding="utf-8"?>
<douzifly.list.widget.TitleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:padding="8dp"
        android:singleLine="true"
        android:text="List"
        android:textColor="@color/textTitle"
        android:textSize="@dimen/txt_size_extra"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:maxWidth="240dp"
        />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:fab_colorNormal="@color/whitePrimary"
        app:fab_colorRipple="@color/whiteRipple"
        app:fab_colorPressed="@color/whitePressed"
        app:fab_elevationCompat="0dp"
        app:fab_shadowRadius="0dp"
        android:layout_alignTop="@id/txt_title"

        />

    <TextView
        android:id="@+id/txt_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:padding="8dp"
        android:singleLine="true"
        android:text="List"
        android:textColor="@color/textTitle"
        android:textSize="@dimen/txt_size_big"
        android:layout_toLeftOf="@id/fab_setting"
        android:layout_marginRight="6dp"
        android:layout_alignTop="@id/txt_title"
        />

</douzifly.list.widget.TitleLayout>